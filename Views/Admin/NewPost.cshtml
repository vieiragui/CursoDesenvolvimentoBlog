@{
    Layout = "_LayoutAdminLte";
}

<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <form method="post" asp-action="savepost" asp-controller="admin">
                        <div class="form-group">
                            <label for="inputEmail4">Title</label>
                            <input type="email" class="form-control" id="inputEmail4">
                        </div>
                        <div class="form-group">
                            <label for="inputAddress">Resume</label>
                            <input type="text" class="form-control" id="inputAddress">
                        </div>
                        <div class="form-group">
                            <label for="inputAddress2">Content</label>
                            <textarea class="form-control" id="inputAddress2"></textarea>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputCity">Image</label>
                                <input type="file" class="form-control" id="inputCity">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Save Post</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>